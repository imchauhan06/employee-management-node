<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employee Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center text-primary">Employee Management System</h2>
        <form action="/add" method="POST" enctype="multipart/form-data">
            <input type="text" name="name" placeholder="Enter Employee Name" class="form-control mb-2" required>
            <input type="email" name="email" placeholder="Enter Email" class="form-control mb-2" required>
            <input type="text" name="position" placeholder="Enter Position" class="form-control mb-2" required>
            <input type="text" name="salary" placeholder="Enter Salary" class="form-control mb-2" required>
            <input type="text" name="jobLocation" placeholder="Enter Job Location" class="form-control mb-2" required>
            <input type="text" name="phoneNumber" placeholder="Enter Phone Number" class="form-control mb-2" required>
            <input type="date" name="joiningDate" class="form-control mb-2" required>
            <input type="file" name="profilePicture" class="form-control mb-2">
            <button type="submit" class="btn btn-success">Add Employee</button>
        </form>

        <h3 class="mt-4">Employee List</h3>
        <table class="table">
            <tr>
                <th>Profile</th>
                <th>Name</th>
                <th>Email</th>
                <th>Position</th>
                <th>Actions</th>
            </tr>
            <% employees.forEach(employee => { %>
            <tr>
                <td><img src="/uploads/<%= employee.profilePicture %>" width="50" class="rounded-circle"></td>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= employee.position %></td>
                <td>
                    <a href="/edit/<%= employee._id %>" class="btn btn-primary">Edit</a>
                    <a href="/delete/<%= employee._id %>" class="btn btn-danger">Delete</a>
                    <a href="/profile/<%= employee._id %>" class="btn btn-info">Show Profile</a>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>
