<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <h2 class="text-center text-primary">Edit Employee</h2>

    <form action="/update/<%= employee._id %>" method="POST" class="mt-4 p-3 border rounded shadow-sm">
        <input type="text" class="form-control mb-2" name="name" value="<%= employee.name %>" required>
        <input type="email" class="form-control mb-2" name="email" value="<%= employee.email %>" required>
        <input type="text" class="form-control mb-2" name="position" value="<%= employee.position %>" required>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</body>
